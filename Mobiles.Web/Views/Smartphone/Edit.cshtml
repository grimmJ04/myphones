@using Mobiles.Core.Models;
@model Mobiles.Core.Models.Smartphone

@{
    ViewData["Title"] = "Edit";
    // Get the value stored under key:`CpuId` in ViewData.
    var cpuCollection = ViewData["CpuId"] as SelectList;
}

<h1>Edit</h1>

<h4>Smartphone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BatteryPower_mAh" class="control-label"></label>
                <input asp-for="BatteryPower_mAh" class="form-control" />
                <span asp-validation-for="BatteryPower_mAh" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDualSim" /> @Html.DisplayNameFor(model => model.IsDualSim)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="InternalMemory_GB" class="control-label"></label>
                <input asp-for="InternalMemory_GB" class="form-control" />
                <span asp-validation-for="InternalMemory_GB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ram_MB" class="control-label"></label>
                <input asp-for="Ram_MB" class="form-control" />
                <span asp-validation-for="Ram_MB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceRange" class="control-label"></label>
                <!-- Note the select list -->
                <select asp-for="PriceRange" class="form-control" asp-items="Html.GetEnumSelectList<Price>()">
                    <option>Select ...</option>
                </select>
                <span asp-validation-for="PriceRange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpuId" class="control-label">Cpu</label>
                <select asp-for="CpuId" class="form-control" asp-items="cpuCollection">
                    <option>Select ...</option>
                </select>
                <span asp-validation-for="CpuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
