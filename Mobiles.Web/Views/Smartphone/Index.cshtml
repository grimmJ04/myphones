@model IEnumerable<Mobiles.Core.Models.Smartphone>

@{
    ViewData["Title"] = "Index";
}

<link href="~/lib/datatables.net-dt/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
<script src="~/lib/datatables.net/jquery.dataTables.min.js" type="text/javascript"></script>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered table-sm datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BatteryPower_mAh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDualSim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InternalMemory_GB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ram_MB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceRange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BatteryPower_mAh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDualSim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InternalMemory_GB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ram_MB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceRange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpu!.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
